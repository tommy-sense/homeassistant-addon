#!/usr/bin/env bashio

declare CADDY_EXIT_CODE=${1}

if [[ "${CADDY_EXIT_CODE}" -ne 0 ]] && [[ "${CADDY_EXIT_CODE}" -ne 256 ]]; then
  bashio::log.warning "Caddy exited with code ${CADDY_EXIT_CODE}"
  bashio::log.warning "Halt add-on due to Caddy failure"
  echo "${CADDY_EXIT_CODE}" > /run/s6-linux-init-container-results/exitcode
  exec /run/s6/basedir/bin/halt
fi

bashio::log.info "Caddy service restart after closing"